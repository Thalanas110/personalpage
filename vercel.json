{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "build": {
    "env": {},
    "commands": [
      "npm ci --no-optional",
      "npm run build"
    ]
  },
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
